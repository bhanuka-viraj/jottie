<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse71.finalproject.jotit.controller.MainController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="5.0" top="20.0" />
         </BorderPane.margin>
         <TreeView fx:id="treeMenu" showRoot="false" styleClass="vbox-tree" VBox.vgrow="ALWAYS">
            <root>
               <TreeItem expanded="true">
                  <children>
                     <TreeItem value="Dashboard" />
                     <TreeItem value="My Jots">
                        <children>
                           <TreeItem value="Add New Jot" />
                           <TreeItem value="View Jots" />
                        </children>
                     </TreeItem>
                     <TreeItem value="Received" />
                     <TreeItem value="Moods">
                        <children>
                           <TreeItem value="Add a Mood" />
                           <TreeItem value="View Jots" />
                        </children>
                     </TreeItem>
                     <TreeItem value="Tasks">
                        <children>
                           <TreeItem value="Add a Task" />
                           <TreeItem value="View Tasks" />
                        </children>
                     </TreeItem>
                  </children>
               </TreeItem>
            </root>
         </TreeView>
      </VBox>
   </left>

   <top>
      <HBox prefHeight="43.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="45.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view">
               <HBox.margin>
                  <Insets left="50.0" top="5.0" />
               </HBox.margin>
               <image>
                  <Image url="@assets/Max-R_Headshot (1).jpg" />
               </image>
            </ImageView>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="52.0" fitWidth="70.0">
                     <image>
                        <Image url="@assets/logoPic.png" />
                     </image>
                     <HBox.margin>
                        <Insets bottom="5.0" right="20.0" top="5.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>

   <bottom>
      <HBox prefHeight="30.0" prefWidth="600.0" style="-fx-background-color: #9BBEC8;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin></HBox>
   </bottom>
   <center>
      <StackPane fx:id="stackPane" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="5.0" />
         </BorderPane.margin>
      </StackPane>
   </center>
</BorderPane>
